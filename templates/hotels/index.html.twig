{% extends "base.html.twig" %}

{% block body %}

    <div class="row justify-content-center">
    {% for hotel in hotels %}
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="{{ asset('photos/' ~ hotel.photo) }}" class="card-img-top" height="200" alt="...">
                <div class="card-body">
                    <h1>{{ hotel.name }}</h1>
                    <h5>{{ hotel.city }} - {{ hotel.country }}</h5>
                    <p class="card-text">{{ hotel.description }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a class="btn btn-sm btn-outline-primary text-decoration-none" href="{{path('booking', {slug: hotel.slug} ) }}">Reserver</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

    <div class="d-flex justify-content-between">
    {% if previous >= 0 %}
        <a href="{{ path('home', { offset: previous }) }}" class="btn btn-outline-primary"><img src="{{ asset('style/previous.png') }}" height="10" class="mr-3" alt="">Previous</a>
    {% endif %}
    {% if next < hotels|length %}
        <a href="{{ path('home', { offset: next }) }}" class="btn btn-outline-primary">Next<img src="{{ asset('style/next.png') }}" height="10" class="ml-3" alt=""></a>
    {% endif %}
    </div>
    
{% endblock %}